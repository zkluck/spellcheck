{
  "name": "spellcheck",
  "version": "1.0.0",
  "description": "AI检测中文文本的语法，拼写，标点符号，重复等错误的网站",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage",
    "e2e": "cross-env E2E_ENABLE=1 playwright test",
    "e2e:ui": "cross-env E2E_ENABLE=1 playwright test --ui",
    "e2e:headed": "cross-env E2E_ENABLE=1 playwright test --headed",
    "prepare": "husky install",
    "gen:schema": "tsx scripts/generate-schemas.ts"
  },
  "dependencies": {
    "@langchain/core": "^0.1.17",
    "@langchain/openai": "^0.0.14",
    "@tanstack/react-virtual": "3.13.12",
    "classnames": "^2.3.2",
    "langchain": "^0.1.25",
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18",
    "react-feather": "^2.0.10",
    "sass": "^1.69.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@types/classnames": "^2.3.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/coverage-v8": "^1.6.0",
    "cross-env": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "^14.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "tsx": "^4.16.2",
    "typescript": "^5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0",
    "zod-to-json-schema": "^3.23.5"
  },
  "author": "zkluck",
  "license": "ISC",
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "next lint --fix --max-warnings=0",
      "tsc --noEmit"
    ]
  }
}
